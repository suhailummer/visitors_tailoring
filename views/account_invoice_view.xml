<?xml version="1.0" encoding="utf-8"?>
<odoo>	
    
    <record model="ir.ui.view" id="sale_order_button">
        <field name="name">account.invoice.button.tailor</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='number']" position="after">
                
              <button style="margin-left:700px" name="action_show" type="object" class="oe_stat_button" icon="fa-star"
                             widget="statinfo" string="project"/>
           
                            </xpath>
                

	        
        </field>
    </record>
</odoo>